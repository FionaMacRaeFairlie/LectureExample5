<html>
  <head>
    {{>header}}
  </head>
  <body>
   <section class="pt-4">
        <div class="container ">
            <div class="row row-cols-4">
              {{#employee}}
                <div class="mb-5">
                    <div class="card bg-light border-0 h-100">
                        <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                            <div class="feature bg-primary bg-gradient text-white rounded-3 mb-4 mt-n4"><i
                                    class="bi bi-filter-square-fill"></i>
                            </div>
                            <p class="card-text">
                                Name {{name}} 
                            </p>
                            <p class="card-text">
                                  Employee number {{_id}}
                            </p>
                        </div>
                      </div>
                </div>
              {{/employee}}  
          </div>
        </div>
    </section>
  </body>
</html>

